{% extends 'UJMExoBundle::layout.html.twig' %}

{% block title %} Nom du Cours{% endblock %}

{% block content %}
{{ tinymce_init() }}

<h1> Liste des questions de l'exercise :  {{ entity.title }} </h1>

    <p>
    {# Tableau de la liste des exercises #}
    <table border="1">
    {# menu_exercise #}
    <a href="{{ path('question_new_with_qi') }}" > <img src="{{ asset('bundles/ujmexo/images/ajouter_question.PNG') }}"> Nouvelle question</a><br />
    <a href="#"> <img src="{{ asset('bundles/ujmexo/images/banque_questions.gif') }}"> Récupérer une question de votre banque </a><br />
    <a href="#"> <img src="{{ asset('bundles/ujmexo/images/recup_question_cours.gif') }}"> Récupérer une question utilisée dans ce cours</a>
        <tr>
        <th>N°</th>
        <th>Intitulé</th>
        <th>Type</th>
        </tr>
    {% for question in entity.questions %}
        <tr>
            <td>{{ question.id }}</td>
            <td>{{ question.title }}</td>
        </tr>   
    {% endfor %}
    </table>
    </p>



{% endblock %}