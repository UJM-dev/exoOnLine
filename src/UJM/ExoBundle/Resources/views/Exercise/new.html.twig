{% extends 'UJMExoBundle::layout.html.twig' %}

{% block title %} Nom du Cours{% endblock %}

{% block content %}
{{ tinymce_init() }}
<h1>Exercise creation</h1>

<form action="{{ path('exercise_create') }}" method="post" {{ form_enctype(form) }} class="well label_bold">
    {{ form_widget(form) }}
    <p>
        <button type="submit">Create</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('exercise') }}">
            Back to the list
        </a>
    </li>
</ul>

{% endblock %}

