{% extends 'UJMExoBundle::layout.html.twig' %}

{% block title %} {{ "Question list" | trans }} {% endblock %}

{% block content %}
    <h4>{{ "My questions" | trans }}</h4></br></br>

    <a href="{{ path('exercise_show', { 'id':  exerciseID }) }}">{{ "Back" | trans }}</a>
    |
    <a href="{{ path('exercise_import_question', { 'exoID':  exerciseID }) }}">{{ "Import questions" | trans }}</a>
    <table class="records_list">
        <thead>
            <tr>
                <th>{{ "Title" | trans }}</th>
                <th>{{ "Type" | trans }}</th>
                <th>{{ "Question" | trans }}</th>
                <th>{{ "Category" | trans }}</th>
                <th>{{ "Actions" | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% set i = 0 %}
        {% for interaction in interactions %}
            <tr>
                <td><a href="{{ path('question_show', { 'id': interaction.question.id }) }}">{{ interaction.question.title }}</a></td>
                <td>{{ interaction.type }}</td>
                <td>{{ interaction.invite|raw }}</td>
                <td>{{ interaction.question.category.value }}</td>
                <td>
                    <ul>
                        {% if(questionWithResponse[i] == 0) %}
                            <li>
                                <a href="{{ path('question_edit', { 'id': interaction.question.id }) }}">{{ "Edit" | trans }}</a>
                            </li>
                        {% else %}
                            <li>
                                <a href="{{ path('question_edit', { 'id': interaction.question.id }) }}" style="color:red">{{ "Edit" | trans }}</a>
                            </li>
                        {% endif %}
                        <li>
                            <form action="{{ path('exercise_question_delete', { 'exoID': exerciseID, 'qid': interaction.question.id }) }}" method="post">
                                <button type="submit">{{ "Delete of my exercise" | trans }}</button>
                            </form>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('question_new_with_qi', { 'exoID': exerciseID }) }}">
                {{ "Create a new entry" | trans }}
            </a>
        </li>
    </ul>
{% endblock %}